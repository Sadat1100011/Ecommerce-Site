
@{
    ViewData["Title"] = "Product Listing";
}

<link rel="stylesheet" href="~/css/site.css" />

<div class="container">
    <div class="row text-center">
        <div class="col-md-12">
            <h1>Welcome to Adnan's Store</h1>
            <p>Your one-stop shop for all your equipment needs.</p>
        </div>
    </div>

    <div class="row">
        @for (int i = 1; i <= 20; i++)
        {
            <div class="col-md-3">
                <div class="card mb-4 shadow-sm">
                    <img class="card-img-top" src="~/images/maccoffeegold.jpeg" alt="Product @i" />
                    <div class="card-body">
                        <h5 class="card-title">Product @i</h5>
                        <p class="card-text">This is a brief description of product @i. High quality and reliable.</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted">$10.00</span>
                            <button class="btn btn-primary">Buy Now</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card {
        border: 1px solid #e3e3e3;
        border-radius: 5px;
    }
    .card-img-top {
        height: 200px;
        object-fit: cover;
    }
    .card-body {
        padding: 10px;
    }
</style>
